# FHFA Seasonal Adjustment Pipeline Configuration
# Copy this file to .env and update values as needed

# Project paths (defaults to relative paths if not set)
FHFA_DATA_DIR=/path/to/data
FHFA_OUTPUT_DIR=/path/to/output
FHFA_CACHE_DIR=/path/to/cache

# Model parameters
FHFA_DEFAULT_AR_ORDER=1
FHFA_DEFAULT_DIFF_ORDER=1
FHFA_DEFAULT_MA_ORDER=2
FHFA_SEASONAL_PERIOD=4

# Processing settings
FHFA_PARALLEL_ENABLED=true
FHFA_N_JOBS=-1
FHFA_CHUNK_SIZE=1000
FHFA_MEMORY_LIMIT_GB=16.0

# Data quality thresholds
FHFA_MIN_OBSERVATIONS=20
FHFA_MAX_MISSING_RATE=0.2
FHFA_OUTLIER_THRESHOLD=3.0

# Logging
FHFA_LOG_LEVEL=INFO
FHFA_LOG_FILE=/path/to/pipeline.log

# Performance
FHFA_ENABLE_CACHING=true
FHFA_CACHE_TTL_HOURS=24

# Validation
FHFA_VALIDATION_TOLERANCE=0.001

# API Keys (if needed for external data sources)
# FHFA_API_KEY=your_api_key_here
# WEATHER_API_KEY=your_weather_api_key_here

# Database connections (if needed)
# FHFA_DB_URL=postgresql://user:pass@localhost/fhfa_db

# Monitoring (if using external services)
# FHFA_TELEMETRY_ENABLED=false
# FHFA_TELEMETRY_ENDPOINT=https://telemetry.example.com